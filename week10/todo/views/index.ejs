<!DOCTYPE html> <html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= header %></h1>
    <p>Welcome to <%= body_text %></p>

    <form method="POST" action="/todo" id="todoForm">
      <div class="formfield">
        <div class="formfield--prompt">Title:</div>
        <input type="text" id="todoTitle" name="title">
      </div>
      <div class="formfield">
        <div class="formfield--prompt">Description:</div>
        <textarea id="todoDescription" name="description"></textarea>
      </div>
      <div class="formfield">
        <div class="formfield--prompt">Priority:</div>
        <input type="text" id="todoPriority" name="priority">
      </div>
      <div class="formfield">
        <div class="formfield--prompt">Complete by:</div>
        <input type="text" id="todoDuedate" name="due_date">
      </div>
      <div class="formfield">
        <div class="formfield--prompt">Completed:</div>
        <input type="checkbox" id="todoDone" name="complete">
      </div>

      <input type="submit"></input>
    </form>

    <section id="todoList">
      List your to do items here
    </section>
    <hr/>

    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
    <script src="http://jqueryvalidation.org/files/dist/additional-methods.min.js"></script>

    <script src="/javascripts/validate.js"></script>
  </body>
</html>
